
@{
    ViewBag.Title = "SalvarAluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SalvarAluno</h2>
<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input type="text" id="email" name="email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Idade:</label>
            <input type="number" id="idade" name="idade" class="form-control" />
        </div>
        <div class="form-group">
            <label>sexo:</label>
            <input type="text" id="sexo" name="sexo" class="form-control" />
        </div>
        <div class="form-group">
            <label>Data de inscrição:</label>
            <input type="date" id="nome" name="nome" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Enviar Dados" />
        </div>
    }
</div>
